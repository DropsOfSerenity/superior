              <li><%= link_to 'Wicketer Belts', 'wicketer-belts.html' %></li>
              <li><%= link_to 'Flat Cotton Belting', 'flat-cotton-belting.html' %></li>
              <li><%= link_to 'Drag Brakes', 'drag-brakes.html' %></li>
            </ul>
          </li>
          <li>
            <%= link_to 'Textile Industry', 'textile-industry.html' %>
            <ul class="sub-nav">
              <li><%= link_to 'Arnold Machine Belts', 'arnold-machine-belts.html' %></li>
              <li><%= link_to 'Identification Bands', 'identification-bands.html' %></li>
              <li><%= link_to 'Woolen Twister Head Bands', 'woolen-twister-head-bands.html' %></li>
            </ul>
          </li>
        </ul>
        <%= link_to 'Contact', 'contact.html', :class=>'nav-cta' %>
      </div>
    </nav>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-md-3">
            <ul> 
              <li><%= link_to 'About', 'about.html' %></li>
              <li><%= link_to 'Contact', 'contact.html' %></li>
              <li><%= link_to 'Team', 'about.html#team' %></li> 
            </ul>
          </div>
          <div class="col-xs-12 col-md-3">
            <ul>  
              <li><%= link_to 'Material Handling', 'material-handling.html' %></li>            
              <li><%= link_to 'Polycords', 'polycords.html' %></li>
              <li><%= link_to 'Polyurethane Belts', 'polyurethane-belts.html' %></li>
              <li><%= link_to 'Twisted O-Rings', 'twisted-o-rings.html' %></li>
              <li><%= link_to 'Spools', 'spools.html' %></li>
            </ul>
          </div>
          <div class="col-xs-12 col-md-3">
            <ul>  
              <li><%= link_to 'Plastic Bag Industry', 'plastic-bag-industry.html' %></li>
              <li><%= link_to 'Wicketer Belts', 'wicketer-belts.html' %></li>
