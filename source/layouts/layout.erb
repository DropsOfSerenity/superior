              <li><%= link_to 'Woolen Twister Head Bands', 'woolen-twister-head-bands.html' %></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p class="disclaimer">All Rights Reserved Superior Bands 2015</p>
          </div>
        </div>
      </div>
