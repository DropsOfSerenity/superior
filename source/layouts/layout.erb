<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Superior Bands" %></title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
  </head>

  <body class="<%= page_classes %>">

    <nav>
      <div class="container">
        <i class="fa fa-bars" id="toggleNav"></i>
        <% link_to '/', :class=>'site-id' do %>
          <!-- <%= image_tag 'http://placehold.it/80x32' %> -->
          <h2>Superior Bands</h2> 
        <% end %>
        <ul class="parent-nav">
          <li><%= link_to 'About', 'about.html' %></li>
          <li>
            <%= link_to 'Material Handling', 'material-handling.html' %>
            <ul class="sub-nav">
              <li><%= link_to 'Polycord', 'polycord.html' %></li>
              <li><%= link_to 'Polyurethane Belts', 'polyurethane-belts.html' %></li>
              <li><%= link_to 'Twisted O-Rings', 'twisted-o-rings.html' %></li>
              <li><%= link_to 'Spools', 'spools.html' %></li>
            </ul>
          </li>
          <li>
            <%= link_to 'Plastic Bag Industry', 'plastic-bag-industry.html' %>
